	<select id="getDeliveryList" resultMap="deliveryResultMap">
	SELECT
			l.laundry_name
			,m.m_name
			,d.delivery_plan_date
			,d.delivery_finish_time
		FROM
			tb_delivery AS d
			INNER JOIN
			tb_user AS u
			on
			u.user_code = d.user_code
			INNER JOIN
			tb_member AS m
			on
			u.m_id = m.m_id
			INNER JOIN
			tb_laundry AS l
			ON 
			d.laundry_code =l.laundry_code;
	</select>


